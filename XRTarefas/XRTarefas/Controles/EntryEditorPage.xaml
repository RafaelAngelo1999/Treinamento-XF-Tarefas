<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XRTarefas.Controles.EntryEditorPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Text=""
                   x:Name="TxtIdade"
                   TextColor="White"
                   Placeholder="Digite"
                   PlaceholderColor="White"
                   Keyboard="Numeric"
                   BackgroundColor="LightCoral" />

            <Entry Text=""
                   TextColor="White"
                   Placeholder="Digite"
                   PlaceholderColor="White"
                   Keyboard="Numeric"
                   IsPassword="True"
                   BackgroundColor="LightCoral" />
            <Label x:Name="Lbl_Duplicado"/>
            <Editor x:Name="TxtComentario" HeightRequest="200"/>
            <Label x:Name="LblQuantidadeCaracteres"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>