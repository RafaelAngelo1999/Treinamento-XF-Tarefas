<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XRTarefas.Controles.ProgressBarPage">
    <ContentPage.Content>
        <StackLayout>
            <ProgressBar Progress="0.2" x:Name="Bar1"/>
            <ProgressBar Progress="0.3" x:Name="Bar2"/>
            <ProgressBar Progress="0.7" x:Name="Bar3"/>
            <ProgressBar Progress="0.5" x:Name="Bar4"/>
            <ProgressBar Progress="0.4" x:Name="Bar5"/>
            <ProgressBar Progress="0.8" x:Name="Bar6"/>
            <ProgressBar Progress="0.5" x:Name="Bar7"/>
            

            <Button Text="Modificar Bar" Clicked="Modificar" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>